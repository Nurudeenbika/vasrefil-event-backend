{
  "name": "event-management-backend",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Event booking platform backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "ts-node src/scripts/seed.ts",
    "test:jest": "jest",
    "test:mocha": "mocha --require tsx --extension ts --config .mocharc.cjs",
    "test:mocha:watch": "mocha --require tsx --extension ts --config .mocharc.cjs --watch",
    "test:mocha:coverage": "nyc --require tsx --reporter=text mocha --config .mocharc.cjs",
    "test": "npm run test:jest && npm run test:mocha",
    "test:coverage": "npm run test:jest -- --coverage && npm run test:mocha:coverage",
    "test:watch": "npm run test:jest -- --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^5.2.2",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.13",
    "@types/deep-eql": "^4.0.2",
    "@types/express": "^4.17.23",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.9",
    "@types/nodemailer": "^6.4.9",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "chai": "^5.2.1",
    "chai-http": "^5.1.2",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
